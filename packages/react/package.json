{
    "name": "@pixkit/react",
    "version": "0.4.0",
    "description": "Pixel-art themed React UI components",
    "type": "module",
    "sideEffects": [
        "**/*.css"
    ],
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "tsup"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18"
    },
    "dependencies": {
        "@pixkit/tokens": "workspace:*",
        "@types/react": "^19.1.12",
        "clsx": "^2.1.0"
    },
    "keywords": [
        "react",
        "components",
        "ui",
        "pixel-art",
        "retro",
        "design-system"
    ],
    "author": "Ruslan Shayakhmetov",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/shayaqhmetov/pixkit.git",
        "directory": "packages/react"
    },
    "bugs": {
        "url": "https://github.com/shayaqhmetov/pixkit/issues"
    },
    "homepage": "https://github.com/shayaqhmetov/pixkit#readme",
    "publishConfig": {
        "access": "public"
    }
}